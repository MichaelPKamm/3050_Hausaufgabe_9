{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "/meteodaten_2023_daily.json"},
    "transform": [
      {
        "filter": {
          "and": [
            {"field": "T", "valid": true},
            {"field": "p", "valid": true}
          ]
        }
      }
    ],
    "mark": "rect",
    "width": 300,
    "height": 200,
    "encoding": {
      "x": {
        "bin": {"maxbins": 60},
        "field": "T",
        "type": "quantitative",
        "title": "Temperature (Â°C)"
      },
      "y": {
        "bin": {"maxbins": 40},
        "field": "p",
        "type": "quantitative",
        "title": "Pressure (hPa)"
      },
      "color": {
        "aggregate": "count",
        "type": "quantitative",
        "title": "Count"
      }
    },
    "config": {
      "view": {
        "stroke": "transparent"
      }
    }
  }
  